<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/defaultMargin">

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintWidth_percent="0.8"
        tools:background="#ff0000"/>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/interelementsPadding"
        android:layout_margin="@dimen/defaultMargin"
        android:textSize="@dimen/hugeText"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/character_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="name" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/character_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/interelementsPadding"
        android:layout_margin="@dimen/defaultMargin"
        app:justifyContent="space_around"
        app:alignItems="flex_start"
        app:flexWrap="nowrap"
        app:flexDirection="row"
        app:layout_constraintTop_toBottomOf="@id/character_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/secondaryTextColor"
            tools:text="species"/>

        <TextView
            android:id="@+id/character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/secondaryTextColor"
            tools:text="gender"/>

        <TextView
            android:id="@+id/character_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/secondaryTextColor"
            tools:text="status"/>
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/character_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/character_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/interelementsPadding"
            android:layout_margin="@dimen/defaultMargin"
            android:textSize="@dimen/normalText"
            android:textColor="@color/secondaryTextColor"
            tools:text="Type"/>

        <TextView
            android:id="@+id/character_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/interelementsPadding"
            android:layout_margin="@dimen/defaultMargin"
            android:textSize="@dimen/normalText"
            android:textColor="@color/secondaryTextColor"
            tools:text="Origin"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>